{
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky",
    "cypress:open": "cypress open",
    "test:e2e": "cypress run --e2e",
    "test:e2e:headless": "cypress run --e2e --browser=chrome",
    "test:ct": "cypress run --component",
    "test:ct:open": "cypress open --component",
    "test:e2e:ci": "start-server-and-test dev http://localhost:5173 'cypress run --e2e --browser=chrome'"
  },
  "lint-staged": {
    "app/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "cypress/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,css,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.1.0",
    "@types/node": "^24.9.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.0.4",
    "cypress": "^15.5.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-cypress": "^5.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "prettier": "^3.6.2",
    "start-server-and-test": "^2.1.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.11"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
